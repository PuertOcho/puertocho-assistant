# Puertos de los servicios
PORT_APP=10003
PORT_EUREKA=8761
PORT_CONFIG=8888
PORT_GATEWAY=10002
PORT_MAIL=9902
PORT_USER=9901
PORT_CLOUD=9903
PORT_INTENT_MANAGER=9904
PORT_DB=5432

# Nombres de los servicios
APP_NAME=puertocho-assistant-app
EUREKA_SERVICE=puertocho-assistant-eureka
CONFIG_SERVICE=puertocho-assistant-config
GATEWAY_SERVICE=puertocho-assistant-gateway
MAIL_SERVICE=puertocho-assistant-mail
USER_SERVICE=puertocho-assistant-user
DB_SERVICE=puertocho-assistant-postgres-db
INTENT_MANAGER_SERVICE=puertocho-assistant-intent-manager

# Configuración de autologin para servicios
AUTOLOGIN_ENABLED=true
SERVICE_USERNAME=PuertochoService
SERVICE_PASSWORD=servicepass123
SERVICE_EMAIL=service@puertocho.local
SERVICE_FULLNAME=Puertocho Service Account
GATEWAY_URL=http://puertocho-assistant-gateway:10002

# Configuración de la base de datos
DB_NAME=puertocho-assistant
DB_USER=puertocho-assistant-user
DB_PASSWORD=puertocho-assistant-password

# Configuración de JWT
JWT_SECRET=tu_clave_secreta_muy_larga_y_segura_que_debe_tener_al_menos_256_bits
JWT_EXPIRATION=86400000

# Configuración de archivos
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Configuración de CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=3600

# Configuración de integraciones
GOOGLE_DRIVE_ENABLED=false
DROPBOX_ENABLED=false
ONEDRIVE_ENABLED=false
NOTION_ENABLED=true

# Configuración de Notion
NOTION_API_VERSION=2022-06-28
NOTION_CLIENT_ID=YOUR_NOTION_CLIENT_ID
NOTION_CLIENT_SECRET=YOUR_NOTION_CLIENT_SECRET
NOTION_REDIRECT_URI=http://localhost:8081/api/v1/cloud/notion/callback
NOTION_SUCCESS_REDIRECT=http://localhost:3000/settings/applications?integration=notion&status=success
NOTION_FAILURE_REDIRECT=http://localhost:3000/settings/applications?integration=notion&status=failure 

# Habilitar microservicios
ENABLE_USER=true
ENABLE_MAIL=true
ENABLE_CLOUD=false
ENABLE_INTENT_MANAGER=true

# Anthropic API Key (CRÍTICO)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API Key (CRÍTICO)
OPENAI_API_KEY=sk-proj-...

# Azure TTS Credentials (OBLIGATORIO)
AZURE_TTS_KEY=e32...
AZURE_TTS_REGION=westeurope

# Redis
PORT_REDIS=6379
REDIS_SERVICE=puertocho-redis
REDIS_HOST=puertocho-redis
REDIS_PORT=6379
REDIS_PASSWORD=puertocho-redis
REDIS_DB=0

# Clasificación intents
NLU_URL=http://localhost:5001
DU_URL=http://du-puertocho-ms:5005/webhooks/rest/webhook
NLU_ENABLED=false
DU_ENABLED=true

# Configuración del servicio DU (Rasa)
ENABLE_DU=true
DU_SERVICE=du-puertocho-ms
PORT_DU=5005
RASA_PORT=5005
RASA_DEBUG=true
RASA_CORS=*
RASA_MODEL=models
ACTIONS_PORT=5055
LLM_MODEL=o4-mini
LANG=es
RASA_PRO_LICENSE=eyJ...
LITELLM_DROP_PARAMS=true

# LLM Configuration
PRIMARY_LLM_MODEL=gpt-4
MOE_LLM_A_MODEL=gpt-4
MOE_LLM_B_MODEL=claude-3-sonnet-20240229
MOE_LLM_C_MODEL=gpt-3.5-turbo

# MoE Configuration
MOE_ENABLED=true
MOE_TIMEOUT_PER_VOTE=30
MOE_PARALLEL_VOTING=true
MOE_CONSENSUS_THRESHOLD=0.6
MOE_MAX_DEBATE_ROUNDS=1

# Intent Configuration
INTENT_CONFIG_FILE=classpath:config/intents.json
INTENT_HOT_RELOAD_ENABLED=true
INTENT_HOT_RELOAD_INTERVAL=30
INTENT_DEFAULT_CONFIDENCE_THRESHOLD=0.7
INTENT_DEFAULT_MAX_EXAMPLES_FOR_RAG=5

# Vector Store Configuration
VECTOR_STORE_TYPE=in-memory
VECTOR_STORE_COLLECTION=intent-examples
VECTOR_STORE_EMBEDDING_DIMENSION=1536
VECTOR_STORE_MAX_RESULTS=10
VECTOR_STORE_SIMILARITY_THRESHOLD=0.7
VECTOR_STORE_INIT_EXAMPLES=true
VECTOR_STORE_EXAMPLE_COUNT=5
