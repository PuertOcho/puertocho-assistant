# Configuración de la API
API_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Configuración de GPU
NVIDIA_VISIBLE_DEVICES=all

# Configuración de Whisper Local
WHISPER_MODEL=base
DEFAULT_LANGUAGE=es

# Debug
DEBUG_AUDIO=false

# Configuración de API Externa
ENABLE_EXTERNAL_API=true
EXTERNAL_API_URL=https://api.openai.com/v1/audio/transcriptions
EXTERNAL_API_KEY=your_openai_api_key_here
EXTERNAL_API_MODEL=whisper-1

# Configuración de Método por Defecto y Fallback
DEFAULT_TRANSCRIPTION_METHOD=external
FALLBACK_METHOD=local
FALLBACK_ENABLED=true
EXTERNAL_API_TIMEOUT=30
